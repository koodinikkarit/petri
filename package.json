{
	"name": "petri",
	"version": "0.4.0",
	"main": "app.js",
	"author": {
		"name": "Jaska"
	},
	"scripts": {
		"start": "env-cmd ./config.env ts-node-dev --respawn src/app.ts",
		"app": "node ./dist/app.js",
		"watch": "env-cmd ./config.env babel-watch ./src/app.js",
		"build": "tsc -p tsconfig.json",
		"test": "jest",
		"test-changed": "jest -o",
		"clean": "rimraf ./node_modules",
		"build-schemadef": "node combineGraphqlSchema.js && graphql-to-typescript schema.gql src/schemadef.ts",
		"build-json-schema": "node combineGraphqlSchema.js && apollo-codegen introspect-schema schema.gql --output schema.json",
		"bump-patch": "grunt bump:patch",
		"bump-minor": "grunt bump:minor",
		"bump-major": "grunt bump:major",
		"build-graphql-typescript-types": "graphql-to-typescript gqlfiles/* src/schemadef.ts"
	},
	"dependencies": {
		"apollo-link": "^1.2.1",
		"apollo-server-express": "^1.3.2",
		"body-parser": "^1.18.2",
		"cors": "^2.8.4",
		"dataloader": "^1.3.0",
		"env-cmd": "^7.0.0",
		"express": "^4.16.2",
		"express-session": "^1.15.6",
		"google-protobuf": "^3.5.0",
		"graphql": "^0.12.3",
		"graphql-tools": "^2.14.1",
		"protobufjs": "^6.8.3",
		"grpc": "^1.8.0",
		"lodash": "^4.17.5",
		"apollo-link-http": "^1.5.2",
		"node-fetch": "^2.0.0",
		"apollo-link-batch-http": "^1.2.0",
		"apollo-link-error": "^1.0.7",
		"jsonwebtoken": "^8.2.0",
		"risto-client-js": "^0.0.24"
	},
	"devDependencies": {
		"@types/cors": "2.8.3",
		"@types/express": "^4.11.0",
		"@types/express-session": "^1.15.6",
		"@types/google-protobuf": "^3.2.7",
		"@types/graphql": "^0.11.7",
		"@types/lodash": "^4.14.105",
		"@types/jsonwebtoken": "^7.2.6",
		"@playlyfe/gql": "^2.4.0",
		"grunt": "^1.0.1",
		"grunt-bump": "^0.8.0",
		"rimraf": "^2.6.2",
		"tsc-watch": "^1.0.13",
		"typescript": "^2.6.2",
		"graphql-to-typescript": "^0.1.2",
		"ts-node": "^5.0.1",
		"ts-node-dev": "^1.0.0-pre.17"
	}
}
